{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "#Controllers/*": ["Controllers/*"],
      "#Routes/*": ["routes/*"],
      "#Services/*": ["Services/*"],
      "#Utils/*": ["utils/*"],
      "#App/*": ["*"],
      "#Kernel/*": ["Kernel/*"],
      "#Models/*": ["Models/*"],
      "#Config": ["Kernel/Config.ts"]
    }
  },
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts", ".eslintrc.js"],
  "plugins": [
    {
      "name": "tsconfig-paths",
      "afterDeclarations": true
    }
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "esm": true
  }
}
