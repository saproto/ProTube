{
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": ".",
    "paths": {
      "#Controllers/*": ["Controllers/*"],
      "#Routes/*": ["Routes/*"],
      "#Services/*": ["Services/*"],
      "#App/*": ["*"],
      "#Kernel/*": ["Kernel/*"],
      "#Models/*": ["Models/*"],
      "#Config.js": ["Kernel/Services/Config.js"],
      "#Logging.js": ["Kernel/Services/Logging.js"],
      "#Schemas": ["Schemas/*"],
      "#SocketControllers": ["SocketControllers/*"],
      "#Middlewares": ["Middlewares/*"],
      "#SocketMiddlewares": ["SocketMiddlewares/*"],
      "#Jobs": ["Jobs/*"],
      "#Modules": ["Modules/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["src/**/*.ts", "src/**/*.d.ts", ".eslintrc.cjs", "tests/**/*.ts", "jest.config.cjs"],
  "plugins": [
    {
      "name": "tsconfig-paths",
      "afterDeclarations": true
    }
  ],
  "ts-node": {
    "files": true,
    "transpileOnly": true,
    "esm": true
  }
}
